<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/notification_background">

    <!-- Hospital/Clinic Name (equivalent to Restaurant Name) -->
    <TextView
        android:id="@+id/hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eClinic-Q"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:textColor="#424242" />

    <!-- Doctor Name and Status (equivalent to Status Title) -->
    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dr. Milind Chauhan"
        android:textFontWeight="600"
        android:textSize="24sp"
        android:textColor="#424242" />

    <!-- Time Info Row (equivalent to Status Type and Time) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On time"
            android:textColor="#91CA97"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/estimated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | Arriving in 8 minutes"
            android:textSize="16sp"
            android:textColor="#424242" />
    </LinearLayout>

    <!-- Expected Time -->
    <TextView
        android:id="@+id/expected_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Expected Time: 12:30PM"
        android:textSize="14sp"
        android:textColor="#2372EC" />

    <!-- Progress Line with Icons and Token Circles (Zomato Style) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:orientation="horizontal">

        <!-- Restaurant Icon at Start -->
        <ImageView
            android:id="@+id/restaurant_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_checkpoint_restaurant" />

        <!-- Line Segment 1 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_weight="0.25"
            android:alpha="0.4"
            android:background="@drawable/shape_line" />

        <!-- Current Token Circle -->
        <TextView
            android:id="@+id/current_token"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/token_circle_dark_small"
            android:gravity="center"
            android:text="74"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="sans-serif" />

        <!-- Line Segment 2 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_weight="0.25"
            android:alpha="0.4"
            android:background="@drawable/shape_line" />

        <!-- Your Token Circle -->
        <TextView
            android:id="@+id/your_token"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/token_circle_blue_small"
            android:gravity="center"
            android:text="76"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="sans-serif" />

        <!-- Line Segment 3 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_weight="0.5"
            android:alpha="0.2"
            android:background="@drawable/shape_line"
            android:backgroundTint="@android:color/darker_gray" />

        <!-- Home Icon at End -->
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_checkpoint_home" />
    </LinearLayout>
</LinearLayout>
